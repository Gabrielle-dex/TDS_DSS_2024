-- Comandos DLL --
CREATE DATABASE DELIVERY LACTH;

CREATE TABLE Produto(
    ID_PRODUTO INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    Nome VARCHAR (255) NOT NULL,
    Preco DECIMAL (9,2),
    Status BOOLEAN DEFAULT FALSE
);

CREATE TABLE FORMA_PAGAMENTO(
    ID FORMA_PAGAMENTO INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    PAGAMENTO_ENTREGA BOOLEAN DEFAULT TRUE,
    DINHEIRO BOOLEAN DEFAULT TRUE,
    CARTAO BOOLEAN DEFAULT FALSE,   
);


CREATE TABLE CLIENTE(
    ID_CLIENTE INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    ID FORMA_PAGAMENTO INT NOT NULL
    NOME VARCHAR(255) NOT NULL,
    TELEFONE VARCHAR(11),
    ENDERECO VARCHA(255) NOT NULL,
    STATUS BOOLEAN DEFAULT TRUE,
    FOREIGN KEY(ID_FORMA_PAGAMENTO) REFERENCES FORMA_PAGAMENTO(ID_FORMA_PAGAMENTO)
);

CREATE TABLE ENTREGADOR(
    ID_ENTREGADOR INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    NOME VARCHAR (255) NOT NULL,
    CPF VARCHAR (11) NOT NULL,
    TELEFONE VARCHAR (11),
    DISPONIVEL BOOLEAN,
);

CREATE TABLE PEDIDO(
    ID_PEDIDO INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
    VALOR DECIMAL (9,2),
    ID_CLIENTE INT,
    ID_PRODUTO INT,
    ID_ENTREGADOR INT,
    FOREIGN KEY (ID_CLIENTE) REFERENCES CLIENTE(ID_CLIENTE),
    FOREIGN KEY (ID_PRODUTO) REFERENCES Produto(ID_PRODUTO),
    FOREIGN KEY (ID_ENTREGADOR) REFERENCES ENTREGADOR(ID_ENTREGADOR)
);


